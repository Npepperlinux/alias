# 日本語短縮コマンド
alias 更新="sudo apt update;sudo apt upgrade"
alias 端末を閉じる="exit"
alias 再起動="reboot"
alias BIOSに移動="sudo systemctl reboot --firmware-setup"
alias システムプロセス="htop"
alias アプリの自動削除="sudo apt autoremove"
alias アプリのインストール="sudo apt install"
alias アプリの削除="sudo apt remove"
alias アプリの検索="apt search"
alias アプリの詳細="apt show"

alias Eメール="xdg-email"
